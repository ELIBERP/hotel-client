# Environment Variables Template
# Copy this file to .env.local for local development overrides

# API Configuration (Safe for client-side)
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=Hotel Booking App
VITE_APP_VERSION=1.0.0

# Optional: API timeout settings
VITE_API_TIMEOUT=10000

# Optional: Enable debug mode
VITE_DEBUG_MODE=true

# Stripe Configuration (Frontend only - publishable key is safe)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_actual_publishable_key

# DO NOT ADD SENSITIVE DATA HERE
# ❌ No database passwords
# ❌ No API secrets (use backend .env for those)
# ❌ No private keys
